{
  "name": "flash-device-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "dist/index.js",
  "scripts": {
    "start": "npx ncc run ./src/main.ts",
    "build": "npx ncc build ./src/main.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts -f unix",
    "lint:fix": "eslint src/**/*.ts --fix -f unix",
    "test": "jest --coverage --runInBand",
    "all": "npm run build && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/particle-iot/flash-device-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "particle-api-js": "^9.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.13",
    "@typescript-eslint/parser": "^5.58.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.38.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
